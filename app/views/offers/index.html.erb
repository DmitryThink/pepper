<h1>Offer#index</h1>
<%= form_for( @offer, :html => {:multipart => true}) do |f| %>
  <%= f.label :name %><%= f.text_field :name %><br>
  <%= f.label :description %><%= f.text_field :description %><br>
  <%= f.label :original_price %><%= f.text_field :original_price %><br>
  <%= f.label :actual_price %><%= f.text_field :actual_price %><br>
  <%= f.label :url %><%= f.text_field :url %><br>
  <%= f.label :avatar %><%= f.file_field :avatar %><br>
  <%= f.submit %>
<% end %>